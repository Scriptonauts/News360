{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-csstree-validator"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "ion-"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "ion-"
        ]
      }
    ],
    "selector-type-no-unknown": [
      true,
      {
        "ignoreNamespaces": [ "/.*/"],
        "ignoreTypes": [ "/.*/"]
      }
    ],
    "csstree/validator": true
  },
  "ignoreFiles": [
    "build/**",
    "dist/**",
    "**/reset*.css",
    "**/bootstrap*.css",
    "**/*.js",
    "**/*.jsx"
  ]
}